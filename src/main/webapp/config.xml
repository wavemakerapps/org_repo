<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.mobile_live_widgets_prod" version="0.0.2">
    <name>
        Mobile_Live
    </name>
    <description>
         A mobile app with all live widgets 
    </description>
    <author email="surya.talluri@gmail.com" href="">
         Surya Santosh Mani 
    </author>
    <content src="index.html"/>
    <access origin="{{DEVELOPMENT_URL}}/*"/>
    <access origin="http://*"/>
    <plugin name="cordova-plugin-splashscreen" spec="4.0.0"/>
    <plugin name="cordova-plugin-device" spec="1.1.3"/>
    <plugin name="cordova-plugin-app-version" spec="0.1.9"/>
    <plugin name="cordova-plugin-whitelist" spec="1.3.0"/>
    <plugin name="cordova-plugin-inappbrowser" spec="1.5.0"/>
    <plugin name="cordova-plugin-statusbar" spec="2.2.0"/>
    <plugin name="cordova-plugin-file" spec="4.3.0"/>
    <plugin name="cordova-plugin-file-transfer" spec="1.6.0"/>
    <plugin name="cordova-plugin-mediascanner" spec="0.1.3"/>
    <plugin name="cordova-plugin-telerik-imagepicker" spec="https://github.com/wavemaker/cordova-imagepicker-1.git#b518919"/>
    <plugin name="cordova-sqlite-storage" spec="https://github.com/wavemaker/Cordova-sqlite-storage.git#pb-1.4.8"/>
    <plugin name="cordova-plugin-network-information" spec="1.3.0"/>
    <plugin name="cordova-plugin-camera" spec="4.0.3"/>
    <plugin name="cordova-plugin-media-capture" spec="3.0.2"/>
    <platform name="android">
        <splash density="land-ldpi" qualifier="land-ldpi" height="0" src="resources/assets/android/splashes/drawable_land_ldpi/splash.png" width="0"/>
        <splash density="land-mdpi" qualifier="land-mdpi" height="0" src="resources/assets/android/splashes/drawable_land_mdpi/splash.png" width="0"/>
        <splash density="land-hdpi" qualifier="land-hdpi" height="0" src="resources/assets/android/splashes/drawable_land_hdpi/splash.png" width="0"/>
        <splash density="land-xhdpi" qualifier="land-xhdpi" height="0" src="resources/assets/android/splashes/drawable_land_xhdpi/splash.png" width="0"/>
        <splash density="land-xxhdpi" qualifier="land-xxhdpi" height="0" src="resources/assets/android/splashes/drawable_land_xxhdpi/splash.png" width="0"/>
        <splash density="port-ldpi" qualifier="ldpi" height="0" src="resources/assets/android/splashes/drawable_ldpi/splash.png" width="0"/>
        <splash density="port-mdpi" qualifier="mdpi" height="0" src="resources/assets/android/splashes/drawable_mdpi/splash.png" width="0"/>
        <splash density="port-hdpi" qualifier="hdpi" height="0" src="resources/assets/android/splashes/drawable_hdpi/splash.png" width="0"/>
        <splash density="port-xhdpi" qualifier="xhdpi" height="0" src="resources/assets/android/splashes/drawable_xhdpi/splash.png" width="0"/>
        <splash density="port-xxhdpi" qualifier="xxhdpi" height="0" src="resources/assets/android/splashes/drawable_xxhdpi/splash.png" width="0"/>
        <icon density="ldpi" height="0" src="resources/assets/android/icons/icon-ldpi.png" width="0"/>
        <icon density="mdpi" height="0" src="resources/assets/android/icons/icon-mdpi.png" width="0"/>
        <icon density="hdpi" height="0" src="resources/assets/android/icons/icon-hdpi.png" width="0"/>
        <icon density="xhdpi" height="0" src="resources/assets/android/icons/icon-xhdpi.png" width="0"/>
        <icon density="xxhdpi" height="0" src="resources/assets/android/icons/icon-xxhdpi.png" width="0"/>
        <preference name="orientation" value="default"/>
        <preference name="android-minSdkVersion" value="19"/>
        <preference name="SplashScreenDelay" value="25000"/>
    </platform>
